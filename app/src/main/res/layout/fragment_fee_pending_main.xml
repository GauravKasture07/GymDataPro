<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".fee_pending_main"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/textp1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingStart="10dp"
        android:text="Fee Pending Section"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/black"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/edtPendingSearch"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:textColorHint="@color/white"
        android:textColorHighlight="@color/white"
        android:layout_below="@+id/textp1"
        android:background="@drawable/edittext_round_bg"
        android:hint="Search Your Mobile Number"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:paddingStart="15dp"
        tools:ignore="HardcodedText" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="625dp"
        android:layout_below="@+id/edtPendingSearch"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:visibility="visible" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/txtPendingNDF"
            android:textColor="@color/white"
            android:layout_below="@+id/recyclerView"
            android:text="No Data Found"
            android:visibility="gone"
            android:gravity="center"
            />
</RelativeLayout>